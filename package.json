{
  "name": "number-color-picker",
  "displayName": "number-color-picker",
  "publisher": "roman-polansky",
  "description": "",
  "icon": "logo.png",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": ["Other"],
  "repository": {
    "type" : "git",
    "url" : "https://github.com/RomanPolansky/Number-Color-Picker"
  },
  "activationEvents": ["*"],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "number-color-picker",
      "properties": {
        "number-color-picker.languages": {
          "type": "array",
          "default": [
            "html",
            "javascript",
            "typescript"
          ],
          "description": "Set languages to be detected by the extension"
        }
      }
    }
  },
  "scripts": {
    "watch": "webpack --watch",
    "vscode:prepublish": "npm run package",
    "package": "webpack --mode production --devtool hidden-source-map"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
